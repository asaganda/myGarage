<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b6a2d8b0e4.js" crossorigin="anonymous"></script>
</head>
<body>
    
        <header>
            <nav class="navbar" role="navigation">
                <div id="navbar-main">
                    <h1 id="nav-title">Garage App</h1>
                    <i class="fa-solid fa-bars fa-2xl hamburger-menu"></i>
                </div>
                <div id="nav-links-container">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/garage">Car Collection</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/garage/new">Add Car</a>
                        </li>
                    </ul>
                </div>
            </nav>    
        </header>
    <main>
        <section id="collection-header">
            <h1>Welcome to My Garage</h1>
            <a href="/garage/new"><i class="fa-sharp fa-solid fa-plus fa-lg"></i>Add car</a>
        </section>
        <div id="cars-container">
            <% for (let i = 0; i < cars.length; i++) {%>
                <div class="car-item">
                    <img src="<%=cars[i].img%>" alt="">
                    <ul class="car-info">
                        <li>Year: <%=cars[i].year%></li>
                        <li>Make: <%=cars[i].make%></li>
                        <li>Model: <%=cars[i].model%></li>
                        <li>Color: <%=cars[i].color%></li>
                    </ul>
                    <a href="/garage/<%=cars[i].id%>">View Car</a>
                    <a href="/garage/<%=cars[i].id%>/edit">Update Car</a>
                    <form action="/garage/<%=cars[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </div>
            <% } %>
        </div>
    </main>
    <!-- <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script> -->
    <script src="./app.js" type="text/javascript"></script>
</body>
</html>