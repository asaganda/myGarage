            <div class="card m-3 flex-lg-row border border-danger rounded-0">
                
                <div class="card-body">
                  <!-- <h5 class="card-title">Card title</h5> -->
                  <h1 class="card-text font-weight-bold">Add new car information below:</h1>
                  <form action="/garage" method="POST" class="d-flex flex-column">
                    <div class="form-group row">
                        <label for="image" class="col-3 col-lg-4 col-form-label">Image URL</label>
                        <input type="text" class="form-control col-8 col-lg-7" id="image" aria-describedby="image" name="img">
                    </div>
                    <div class="form-group row">
                        <label for="year" class="col-3 col-lg-4 col-form-label">Year</label>
                        <input type="number" class="form-control col-8 col-lg-7" id="year" aria-describedby="year" name="year">
                    </div>
                    <div class="form-group row">
                        <label for="make" class="col-3 col-lg-4 col-form-label">Make</label>
                        <input type="text" class="form-control col-8 col-lg-7" id="make" aria-describedby="make" name="make">
                    </div>
                    <div class="form-group row">
                        <label for="model" class="col-3 col-lg-4 col-form-label">Model</label>
                        <input type="text" class="form-control col-8 col-lg-7" id="model" aria-describedby="model" name="model">
                    </div>
                    <div class="form-group row">
                        <label for="color" class="col-3 col-lg-4 col-form-label">Color</label>
                        <input type="text" class="form-control col-8 col-lg-7" id="color" aria-describedby="color" name="color">
                    </div>
                    <div class="form-group row">
                        <label for="mileage" class="col-3 col-lg-4 col-form-label">Mileage</label>
                        <input type="number" class="form-control col-8 col-lg-7" id="mileage" aria-describedby="mileage" name="mileage">
                    </div>
                    <div class="form-group row">
                        <label for="value" class="col-3 col-lg-4 col-form-label">Value</label>
                        <input type="number" class="form-control col-8 col-lg-7" id="value" aria-describedby="value" name="value">
                    </div>
                    <div class="form-group row">
                        <label for="specs" class="col-3 col-form-label d-sm-none">Specs</label>
                        <label for="specs" class="col-3 col-lg-4 col-form-label d-none d-sm-block">Specifications</label>
                        <input type="text" class="form-control col-8 col-lg-7" id="specs" aria-describedby="specs" name="specs">
                    </div>
                    <button type="submit" class="garage-btn align-self-end">Add</button>
                  </form>
                </div>
            </div>
        </div>
